RewriteRule ^(.[a-z])/gallery/(.*)$ /gallery.php?id=$2
RewriteRule ^(.[a-z])/electro/(.*)$ /electrocatalog.php?id=$2
RewriteRule ^(.[a-z])/(.*)$ /article.php?lang=$1&id=$2
